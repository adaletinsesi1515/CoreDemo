@using X.PagedList;
@using X.PagedList.Mvc.Core;
@model IPagedList<EntityLayer.Concrete.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Kategori Listesi</h1>
<br />
<table class="table table-bordered" id="tbl1">
    <tr>
        <th>#</th>
        <th>Kategori Adı</th>
        <th>Durumu</th>
        <th>Pasif Yap</th>
        <th>Aktif Yap</th>
        <th>Düzenle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.CategoryID</th>
            <td>@item.CategoryName</td>
            @if (@item.CategoryStatus == true)
            {
                <td>Aktif</td>
            }
            else
            {
                <td>Pasif</td>
            }   
            

            <td><a href="/Admin/Category/CategoryPassive/@item.CategoryID" id="PassiveBtn" 
                onclick="return confirm('Pasif yapmak istediğinizden emin misiniz?')";
                class="btn btn-danger">Pasif Yap</a></td>

            <td><a href="/Admin/Category/CategoryActive/@item.CategoryID" id="ActiveBtn" 
                onclick="return confirm('Aktif yapmak istediğinizden emin misiniz?')"; 
                class="btn btn-success">Aktif Yap</a></td>

            <td><a href="/Admin/Category/CategoryEdit/@item.CategoryID" class="btn btn-info">Düzenle</a></td>
        </tr>
    }

</table>
<a href="/Admin/Category/CategoryAdd/" class="btn btn-primary">Yeni Kategori</a>
<br />
<br />
@Html.PagedListPager((IPagedList)Model, page=>Url.Action("Index", new {page}))

