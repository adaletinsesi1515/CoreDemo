@using EntityLayer.Concrete
@model List<Message2>

@{
    ViewData["Title"] = "InBox";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="table-bordered">
    <h4>Gelen Kutusu</h4>
    <table class="table table-bordered">

        <tr>
            <th> # </th>
            <th> Konu</th>
            <th> Gönderen</th>
            <th> Tarih </th>
            <th> Mesajı aç</th>            
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <th> @item.MessageId </th>
                <td> @item.Subject</td>
                <td> @item.SenderUser.WriterName </td>
                <td> @(((DateTime)@item.MessageDate).ToString("dd/MMM/yyyy")) </td>
                <td><a href="/Message/MessageDetails/@item.MessageId" class="btn btn-warning">Mesajı Aç</a></td>
            </tr>
        }
    </table>
</div>
<a href="/Message/MessageAdd/" class="btn btn-info">Yeni Mesaj Oluştur</a>


