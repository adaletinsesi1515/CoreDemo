@model IEnumerable<EntityLayer.Concrete.Comment>



<div class="comment-top">
    <h4>Yapılan Yorumlar</h4>

    @if (Model.Count() == 0)
    {
        <h5>Hiç Yorum Yapılmamış. İlk Yorumu Sen Yap</h5>
    }

    @foreach (var item in Model)
    {
        @if (@ViewBag.Id == item.BlogID)
        {
            <div class="media">
                <img src="~/CoreBlogTema/web/images/t1.jpg" alt="" class="img-fluid" />
                <div class="media-body">
                    <h5 class="mt-0">@item.CommentUserName</h5>
                    <p>@item.CommentTitle</p>
                    <p>@item.CommentContent</p>
                </div>
            </div>
        }
    }
</div>

